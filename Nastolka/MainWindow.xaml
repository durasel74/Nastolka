<Window x:Class="Nastolka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nastolka"
        mc:Ignorable="d"
        Title="Nastolka" Height="600" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox HorizontalScrollBarVisibility="Auto"
            Text="{Binding ViewOutput}"/>

        <Button Grid.Row="1" Margin="10" Content="Генерировать"
                Command="{Binding GenCommand}"/>

        <ListBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                 DataContext="{Binding BunchSets}"
                 ItemsSource="{Binding CommonSets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="14" Text="{Binding Path=Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
